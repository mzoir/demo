<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.controller.LoginUserController">
    <children>
        <!-- Centered StackPane -->
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <VBox spacing="20" alignment="CENTER">
                <!-- Title Section -->
                <VBox style="-fx-border-color: #1976D2; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #E3F2FD; -fx-background-radius: 5;" alignment="CENTER">
                    <Label text="Admin Login" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #1976D2;" />
                </VBox>

                <!-- Login Form Section -->
                <VBox spacing="15" style="-fx-border-color: #1976D2; -fx-border-width: 2; -fx-padding: 20; -fx-background-color: #F1F8E9; -fx-background-radius: 5;" alignment="CENTER">
                    <TextField fx:id="usernameField" promptText="Username" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-color: #1976D2; -fx-background-radius: 5;" />
                    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-color: #1976D2; -fx-background-radius: 5;" />
                    <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 150;" />
                    <Button text="Back" onAction="#backMain" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 150;" />

                    <!-- Error Message -->
                    <Label fx:id="errorMessage" style="-fx-text-fill: red; -fx-font-size: 14;" />
                </VBox>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>
