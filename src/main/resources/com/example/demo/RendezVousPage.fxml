<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:controller="com.example.demo.controller.RendezVousPageController" xmlns:fx="http://javafx.com/fxml">
    <children>
        <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="50" prefWidth="300">
            <!-- Page Title -->
            <Label text="Rendez-Vous Page" style="-fx-font-size: 18; -fx-font-weight: bold;" />

            <!-- Patient Name -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Nom: " />
                <TextField fx:id="nomPatient" promptText="Entrer le nom" />
            </HBox>

            <!-- Patient CIN -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="CIN: " />
                <TextField fx:id="cinPatient" promptText="Entrer le CIN" />
            </HBox>

            <!-- Patient Full Name -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Nom Prenom: " />
                <TextField fx:id="nomPrenomPatient" promptText="Entrer le nom et prénom" />
            </HBox>

            <!-- Appointment Date -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Date: " />
                <DatePicker fx:id="dateRendezVous" promptText="Sélectionnez une date" />
            </HBox>

            <!-- Appointment Time -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Heure: " />
                <TextField fx:id="heureRendezVous" promptText="HH:mm" />
            </HBox>

            <!-- Confirm Button -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Confirmer" onAction="#confirmerRendezVous" />
            </HBox>

            <!-- Back Button -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Retour" onAction="#retournerALogin" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
